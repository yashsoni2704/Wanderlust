                    <div class="card-body">
                        <h5 class="card-title">
                            <%=li.title%>
                        </h5>
                        <p class="card-text">
                            <% if(li.owner) { %>
                                <i>Listed by: <%= li.owner.username %></i><br>
                            <% } %>
