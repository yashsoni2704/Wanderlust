<% layout('/layouts/boilerplate') %>
<div class="container">
  <h2 class="mt-3">My bookings</h2>
  <% if (bookings.length === 0) { %>
    <p class="text-muted">No bookings yet.</p>
  <% } %>
  <div class="row row-cols-1 row-cols-md-2 g-3 mt-2">
    <% for (const b of bookings) { %>
      <div class="col">
        <div class="card p-3">
          <div class="d-flex justify-content-between">
            <div>
              <div class="fw-bold"><%= b.listing?.title || 'Listing' %></div>
              <div class="text-muted small"><%= b.listing?.location %>, <%= b.listing?.country %></div>
              <div class="small">Check‑in: <%= new Date(b.checkIn).toLocaleDateString() %></div>
              <div class="small">Check‑out: <%= new Date(b.checkOut).toLocaleDateString() %></div>
              <div class="small">Rooms: <%= b.roomsBooked %>, Guests: <%= b.guests %></div>
            </div>
            <div class="text-end">
              <span class="badge bg-<%= b.status==='confirmed' ? 'success' : (b.status==='cancelled' ? 'secondary':'warning') %>"><%= b.status %></span>
              <% if (b.status === 'pending') { %>
                <form method="post" action="/bookings/<%= b._id %>/pay" class="mt-2">
                  <button class="btn btn-sm btn-dark">Pay</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

